<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button1" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custombutton1</item>
        <item name="android:textColor">@color/black</item>
        <!-- Agrega más atributos según tus necesidades -->
    </style>
    <style name="Button2" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custombutton2</item>
        <item name="android:textColor">@color/black</item>
        <!-- Agrega más atributos según tus necesidades -->
    </style>
    <style name="Button3" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custombutton3</item>
        <item name="android:textColor">@color/white</item>
        <!-- Agrega más atributos según tus necesidades -->
    </style>

    <style name="TextViewTitulo">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Agrega más atributos según tus necesidades -->
    </style>

    <style name="TextViewSubTitulo">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Agrega más atributos según tus necesidades -->
    </style>
    <style name="TextViewDato">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Agrega más atributos según tus necesidades -->
    </style>
    <style name="EditTextStyle">
        <!-- Puedes personalizar los atributos según tus necesidades -->
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SpinnerStyle">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <!-- Agrega más atributos según tus necesidades -->
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <!-- Modifica los atributos según tus necesidades -->
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <!-- Otros atributos -->
    </style>

    <style name="ScrollViewStyle">
        <!-- Puedes agregar atributos de estilo específicos para ScrollView aquí -->
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>